@{
    ViewBag.Title = "Groups";
    Layout = "~/Areas/Player/Views/Shared/_PlayerLayout.cshtml";
}

@using CoachLancer.Web.Areas.Player.ViewModels
@model ICollection<GroupViewModel>

<div class="page-header">
    <h1>Your Groups</h1>
</div>

<table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" id="groups-table">
    <thead>
    <tr>
        <th>
            Group name
        </th>
        <th>
            Trainings per week
        </th>
        <th>
            Number of players
        </th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count() > 0)
    {
        foreach (var group in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", new {id = group.Id})"> @group.Name</a>
                </td>
                <td>@group.TrainingsPerWeek</td>
                <td>@group.Players.Count</td>
            </tr>

        }
    }
    else
    {
        <tr class="text-center">
            <td colspan="3">
                <h4>You have no groups yet</h4>
            </td>
        </tr>
        <tr class="text-center">
            <td colspan="3">
                <h3>@Html.ActionLink("Click here to join a group!", "Explore")</h3>
            </td>
        </tr>
    }

    </tbody>
</table>

@section Scripts{
    <script>
        $('#groups-table').DataTable();
    </script>
}

