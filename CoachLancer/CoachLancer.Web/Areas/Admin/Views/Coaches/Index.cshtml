
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using CoachLancer.Web.Areas.Admin.Models.CoachViewModels
@model IEnumerable<CoachTableViewModel>

<table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" id="coaches-table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Username
            </th>
            <th>
                Price per hour
            </th>
            <th>
                Groups count
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @Html.DisplayForModel()
        }
        else
        {
            <tr class="text-center">
                <td colspan="6">
                    <h4>There are no registered coaches yet..</h4>
                </td>
            </tr>
            <tr class="text-center">
                <td colspan="6">
                    <h3>@Html.ActionLink("Click here to create a coach!", "Create")</h3>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts{
    <script>
        
    $('#coaches-table').DataTable()
    </script>
}