@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("My Dashboard", "Index", "Dashboard", routeValues: new { area =  "Coach"},htmlAttributes: null)</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello @User.Identity.GetUserName()<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Manage", "Index", "Manage", routeValues: new { area = ""}, htmlAttributes: new { title = "Manage" })
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: new { area = ""}, htmlAttributes: new { id = "registerLink"})</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: new { area = ""}, htmlAttributes: new { id = "loginLink"} )</li>
}
